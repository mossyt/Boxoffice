<div class="main movie-show">
  <div class="container">
    <div class="movie">

      <!-- Display the movie's info here -->
      <div class="info">
        <%= image_tag @movie.image %>
        <h3 class="movie-movie-title"><%= @movie.movie_title %></h3>
        <p class="movie-release-year"><%= @movie.release_year %></p>
        <p class="movie-synopsis"><%= @movie.synopsis %></p>
      </div>
    </div>

    <h2>Cast</h2>
    <% @actors.each do |actor| %>
    <div class="actor">
      <%= image_tag actor.image %>
      <h3 class="actor-name"><%= actor.name %></h3>
      <p class="actor-bio"><%= actor.biography %></p>
    </div>
		<% end %>
  </div>
</div>
